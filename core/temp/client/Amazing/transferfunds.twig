{% include 'header.twig' %}

{% if user['auth'] %}

{% else %}
	<style>
		@media (max-width: 991.98px) {
			.main-top {padding: 70px 0 40px 0!important}
		}
        .lgn-btn {display: none!important}
      
      	@media (min-width: 1199.98px) {
      		.main-top { padding: 400px 0 40px 0}
      		.app-content { margin-top: -300px }
      	}
	</style>
	
    <div class="main-top">
        <div class="main-top-bg"></div>
	</div>
{% endif %}


	<div class="app-content">
      {% if user['auth'] %}
          <div class="container-fluid">
      {% else %}
          <div class="container">
      {% endif %}
               <section class="app-childs">
                  <div class="row">
                     <div class="col-lg-12 col-12 mb-lg-0">
								 <div class="d-card h-100">
								<div class="d-card-head">
									 <div class="dch-icon">
										<i class="fal fa-exchange"></i>
									 </div>
									 {{ lang['transferfunds.bank.transferToFriends'] }}
								  </div>
									<div class="d-card-body">	
									<h4>{{ lang['transferfunds.bank.transferToFriendsSmall'] }}</h4>
        {% if (error) %}
          <div class="alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert">×</button>
            {{ errorText }}
          </div>
        {% endif %}
        {% if success or success_msg %}
          <div class="alert alert-dismissible alert-success">
            <button type="button" class="close" data-dismiss="alert">×</button>
            {{ successText ?? success_msg }}
          </div>
        {% endif %}
		
              <form method="post" action="transferfunds">
    
      <div class="form-group">
                      <label for="method" class="control-label">{{ lang['smmspot.transferfunds.payment.telephone.title'] }}</label>
                      <input class="form-control" name="username" placeholder="{{ lang['smmspot.transferfunds.payment.telephone.title'] }}"  required value="{{ data['username'] }}">
                  </div>
                  
                  <div class="form-group">
                      <label for="method" class="control-label">{{ lang['transferfunds.amount'] }}</label>
                      <input class="form-control" name="amount" value="{{ data['amount'] }}">
                  </div>

                <button type="submit" class="btn btn-primary" onclick="this.disabled=true;this.innerHTML='Wait...';this.form.submit();">{{ lang['smmspot.transferfunds.payment.submit.button'] }}</button>
              </form>

									</div>
							</div>
						</div>
					</div>
               </section>
            </div>
         </div>
      </div>
  

{% include 'footer.twig' %}